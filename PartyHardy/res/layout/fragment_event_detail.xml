<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_detail"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:textIsSelectable="true"
    tools:context="com.hardyparty.partyhardy.EventDetailActivity" >
	
    <LinearLayout
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    
	    <ImageView
	        android:id="@+id/image"
	        android:layout_width="128dp"
	        android:layout_height="128dp"
	        android:src="@drawable/common_signin_btn_icon_dark" />
	    	    
	    <LinearLayout
	        android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" >

	        <Button
	            android:id="@+id/addToMap"
	            style="?android:attr/buttonStyleSmall"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="Add to map" />
	        
	        <LinearLayout
		        android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" >
	        
			    <TextView
			        android:id="@+id/title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center"
			        android:layout_marginTop="2dp"
			        android:layout_marginBottom="4dp"
			        android:text="Title Text"
			        android:textAppearance="?android:attr/textAppearanceLarge" />
			    
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
        
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="lower text"
        android:textAppearance="?android:attr/textAppearanceSmall" />
        
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event description goes here."
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>